@page
@model ls_ava_web.Pages.LoginModel
@{
    ViewData["Title"] = "AVA - Login";
    @section SemMenu { }
    @section SemFooter { }
}

<link rel="stylesheet" href="~/@(nameof(Pages_Index)).styles.css" />
<body>
    <div id="container">
        <h1>AVA</h1>
        <h2>Portal do Aluno</h2>
        <hr>
        <h2>Entrar</h2>
        <input type="text" placeholder="Usuário">
        <input type="password" placeholder="Senha">
        <a class="nav-link" asp-area="" asp-page="Home/Home">Entrar</a>
        <a class="nav-link" asp-area="" asp-page="ResetSenha/RecuperarSenha">Esqueci a minha senha</a>
    </div>
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <span>@error.ErrorMessage</span>
                }
            }
        </div>
    }
</body>